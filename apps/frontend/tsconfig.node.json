{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@zod/db/*": [
        "../../packages/shared/zod/db/*"
      ],
      "@zod/dto/*": [
        "../../packages/shared/zod/dto/*"
      ],
      "@zod/generated": [
        "../../packages/shared/zod/db/generated"
      ],
      "@shared/*": [
        "../../packages/shared/*"
      ],
    }
  },
}