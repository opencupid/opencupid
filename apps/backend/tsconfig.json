{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@zod/*": [
        "../../packages/shared/zod/*"
      ],
      "@shared/*": [
        "../../packages/shared/*"
      ]
    }
  },
  "include": [
    "src",
    "types",
    "scripts",
  ]
}