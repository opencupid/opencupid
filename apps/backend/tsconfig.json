{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@zod/db/*": [
        "../../packages/shared/zod/db/*"
      ],
      "@zod/dto/*": [
        "../../packages/shared/zod/dto/*"
      ],
      "@zod/generated": [
        "../../packages/shared/zod/db/generated"
      ],
      "@shared/*": [
        "../../packages/shared/*"
      ]
    }
  },
  "include": [
    "src",
    "types"
  ]
}