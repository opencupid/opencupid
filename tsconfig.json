{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@opencupid/shared/*": [
        "packages/shared/*"
      ],
      "@prisma/client": [
        "apps/backend/node_modules/@prisma/client"
      ],
      "@generated/*": [
        "packages/shared/zod/generated/*"
      ],
      "@zod/*": [
        "packages/shared/zod/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./apps/backend/node_modules/@types",
      "./packages/shared/node_modules/@types"
    ]
  },
  "include": [
    "packages",
    "apps",
    "types"
  ]
}